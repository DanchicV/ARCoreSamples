<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68bbff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/selected_node_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#77000000" />

    <ToggleButton
        android:id="@+id/translation_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="15dp"
        android:text="Translation"
        android:textOff="Translation Off"
        android:textOn="Translation On"
        app:layout_constraintBottom_toTopOf="@+id/rotation_toggle_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ToggleButton
        android:id="@+id/rotation_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:elevation="15dp"
        android:text="Rotation"
        android:textOff="Rotation Off"
        android:textOn="Rotation On"
        app:layout_constraintBottom_toTopOf="@+id/scale_toggle_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translation_toggle_button" />

    <ToggleButton
        android:id="@+id/scale_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="15dp"
        android:text="Scale"
        android:textOff="Scale Off"
        android:textOn="Scale On"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rotation_toggle_button" />

</android.support.constraint.ConstraintLayout>